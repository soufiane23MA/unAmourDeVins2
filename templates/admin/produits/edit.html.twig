{% extends 'base.html.twig' %}

{% block title %}Modifier un produit{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Modifier le produit</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}  {# DÃ©but du formulaire Symfony #}

        <div class="mb-3">
            {{ form_label(form.nomProduit, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nomProduit, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nomProduit, {'attr': {'class': 'invalid-feedback'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.prix, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.prix, {'attr': {'class': 'invalid-feedback'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.detailProduit, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.detailProduit, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
            {{ form_errors(form.detailProduit, {'attr': {'class': 'invalid-feedback'}}) }}
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Sauvegarder les modifications</button>
        </div>

        {{ form_end(form) }}  {# Fin du formulaire Symfony #}
    </div>
{% endblock %}
