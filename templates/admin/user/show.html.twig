{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}
{% block body %}
<h1>Dossier de : {{user.nom}} {{user.prenom}}</h1>

<p>Date de Naissance: {{user.dateNaissance|date('d/m/y')}}</p>
<p>Adress: {{user.adresse}}</p>
<p>Email : {{user.email}}</p>
<p>Pseudo : {{user.pseudo}}</p>
<p>Mot de passe : {{user.password}}</p>
<a href="{{ path('admin_user_index') }}" class="btn btn-outline-secondary ms-2">
	<i class="fas fa-arrow-left me-2"></i>Retour à la liste
</a>
{% endblock %}