{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Votre Panier</h1>
    
    {% if items | length > 0 %}
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Image</th>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td style="width: 100px;">
                            <img src="{{ asset(item.produit.image) }}" alt="{{ item.produit.nomProduit }}" class="img-fluid rounded" style="max-height: 80px;">
                        </td>
                        <td>{{ item.produit.nomProduit }}</td>
                        <td>{{ item.produit.prix | number_format(2, ',', ' ') }} €</td>
                        <td>{{ item.quantite }}</td>
                        <td>{{ (item.produit.prix * item.quantite) | number_format(2, ',', ' ') }} €</td>
                        <td>
                            <a href="#" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Supprimer
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
         

        <div class="text-right mt-3">
            <a href="#" class="btn btn-primary">Passer à la caisse</a>
        </div>
    {% else %}
        <div class="alert alert-warning" role="alert">
            Votre panier est vide.
        </div>
    {% endif %}
</div>
{% endblock %}
