

{# templates/partials/_search_product_form.html.twig #}

<section class="search_bar">
	<div class="search-container">
			{{ form_start(form, { 'action': path('product_search'), 'method': 'GET' }) }}
					<div class="search-input">
							{{ form_widget(form.query, { 'attr': { 'class': 'search-input-field', 'placeholder': 'Rechercher un produit...' } }) }}
					</div>
					<div class="search-button">
							<button type="submit" class="search-button-icon">
									<i class="fas fa-search"></i> <!-- IcÃ´ne gratuite de FontAwesome -->
							</button>
					</div>
			{{ form_end(form) }}
	</div>
</section>