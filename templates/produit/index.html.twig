            </p>
             
            <a href="{{ path('add_panier',{'id':produit.id})}}"><button class="btn btn-success mt-2" >Ajouter au Panier</button></a>
            <p><a href="{{path('detail_produit',{'id': produit.id})}}">+ de details</a></p>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
<div class="navigation">
  {{ knp_pagination_render(produitsPagines) }}
</div>
 
 

 

{% endblock %}