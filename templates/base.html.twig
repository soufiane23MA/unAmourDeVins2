<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
         
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        
        <link rel="stylesheet" href="{{asset('css/style.css')}}">
        {% endblock %}
    </head>

    <body>
        
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <ul class="nav">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#"> Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_produit') }}">Cave</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Qui Sommes-nous</a>
                </li>
                <li>
                    <a class="nav-link" href="#">Accueil</a>
                </li>
                <li class="nav-link">
                    <img src="imgs/logo.png" alt="logo">
                </li>
                <li>
                    <a class="nav-link" href="{{ path('app_exclusif') }}">Vente exclusive</a>
                </li>
                <!-- Bouton Accord Mets et Vins -->
                <li class="nav-item">
                    <button id="accordMetsVinsBtn" class="btn btn-primary">
                        Accords Mets et Vins
                    </button>
                </li>
            </ul>

            <!-- Liste déroulante cachée -->
            <div id="accordsMetsVinsList" class="d-none">
                <select id="platSelect" class="form-control">
                    <!-- Les options de plats seront ajoutées ici par JavaScript -->
                </select>
            </div>
            <div id="produitsAffiches"></div>
            <nav>
                <ul>
                    <!-- Lien vers la page des régions -->
                    <li><a href="#" id="regionsLink">Régions</a></li>
            
                    <!-- Lien vers la page des domaines (sera visible quand une région est sélectionnée) -->
                    <li><a href="#" id="domainesLink" style="display: none;">Domaines</a></li>
            
                    <!-- Lien vers la page des produits (sera visible quand un domaine est sélectionné) -->
                    <li><a href="#" id="produitsLink" style="display: none;">Produits</a></li>
                </ul>
            </nav>
        



            <ul class="nav ml-auto">
                {% if app.user %}
                    <li><a class="nav-link" href="{{ path('app_logout') }}">Se déconnecter</a></li>
                    <li><a class="nav-link" href="#">Profil</a></li>
                {% else %}
                    <li><a class="nav-link" href="{{ path('app_login') }}">Se connecter</a></li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('app_admin_produits') }}">Gestion des produits</a></li>
                {% endif %}
                <li><a class="nav-link" href="{{ path('app_panier') }}">Panier</a></li>
            </ul>
        </nav>

        {% block body %}{% endblock %}
        <footer class="footer">
            <div>
                <ul>
                    <li>Qui somme nous</li>
                    <li>Politique de confidentialité</li>
                    <li>Mentions légales</li>
                    <li>Suivez notre actualité</li>
                    icone facebook et instgrame
                    <li>Nous contacter</li>
                </ul>
            </div>
        </footer>
        
        <script src="{{ asset('js/script.js') }}" defer></script>
         
         <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script> 

    </body>
</html>
