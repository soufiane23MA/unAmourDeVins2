<h1>Ventes Exclusives:</h1>

<div class="row">
    {% for produit in produitsPagines %}
    <div class="col-md-4 mb-4">
        <div class="card">
            <img src="{{ asset('imgs/' ~ produit.image) }}" alt="{{ produit.nomProduit }}" class="card-img-top" style="max-width: 200px; margin: 0 auto;">
            <div class="card-body">
                <h5 class="card-title">{{ produit.nomProduit }}</h5>
                <h6 class="card-subtitle mb-2 text-muted" style="color: blue;">{{ produit.prix }} €</h6>
                <p><strong>Nom du domaine :</strong> {{ produit.domaine }}</p>
            </div>
            <div class="card-footer">
                <h6>Détails du domaine</h6>
                <p>{{ produit.domaine }}</p>
            </div>
        </div>
    </div>
    {% endfor %}
</div>

<div class="navigation">
    {{ knp_pagination_render(produitsPagines) }}
</div>

 

  


