{% extends 'base.html.twig' %}
 

{% block title %}Ajouter un produit{% endblock %}
{% block body %}
<div class="container my-5">
    <div class="card p-4">
        <h3 class="text-center mb-4">Ajouter un produit</h3>
        
        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

        <div class="mb-3 text-center">
            {% if produit is defined and produit.image is not empty %}
                <img src="{{ asset('imgs/' ~ produit.image) }}" alt="{{ produit.nomProduit }}" class="img-fluid rounded mb-3" style="max-height: 200px;">
            {% endif %}
        </div>

        <div class="mb-3">
            {{ form_label(form.nomProduit, 'Nom du produit', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nomProduit, {'attr': {'class': 'form-control', 'placeholder': 'Nom du produit'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.contenance, 'Contenance', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.contenance, {'attr': {'class': 'form-control', 'placeholder': 'Contenance du produit'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.prix, 'Prix (€)', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'placeholder': 'Prix du produit'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.detailProduit, 'Détail du produit', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.detailProduit, {'attr': {'class': 'form-control', 'placeholder': 'Détails du produit'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.exclusif, 'Exclusivité', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.exclusif, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.image, 'Image du produit', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="text-center">
            <button type="submit" class="card-btn">Ajouter le produit</button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
