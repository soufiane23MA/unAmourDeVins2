<h1>Tous les Vins de : {{ domaine.nomDomaine }}</h1>

{% if produits is not empty %}
    <div class="row">
        {% for produit in produits %}
            <div class="col-md-2 mb-4">
                <div class="card">
                    <img src="{{ asset('imgs/' ~ produit.image) }}" alt="{{ produit.nomProduit }}" class="card-img-top" style="max-width: 100%; height: auto;">
                    <div class="card-body">
                        <h5 class="card-title">{{ produit.nomProduit }} - {{ produit.domaine.nomDomaine }}</h5>
                        <p class="card-text">{{ produit.detailProduit }}</p>
                        <p><strong>Prix :</strong> {{ produit.prix }} €</p>
                        <a href="{{ path('add_panier', {'id': produit.id}) }}">
                            <button class="btn btn-success mt-2">Ajouter au Panier</button>
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% else %}
    <p>Aucun produit trouvé pour ce domaine.</p>
{% endif %}


		 
    
{% endblock %}


